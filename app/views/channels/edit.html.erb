<div class="flex flex-col">
    <%= form_with model: @channel do |f| %>
        <div>
            <%= f.text_field :name, class: "border rounded-md" %>
        </div>
        <div>
            <%= f.text_area :description, class: "border rounded-md" %>
        </div>
        <div>
            <%= f.submit "Update Channel", class: "border rounded-md bg-slate-900 hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 focus:ring-offset-slate-50 text-white font-semibold h-12 px-6 rounded-lg w-full flex items-center justify-center sm:w-auto dark:bg-sky-500 dark:highlight-white/20 dark:hover:bg-sky-400" %>
        </div>
    <% end %>
</div>

